<div class="sift-body">
  <% if @sifts.length != 0 %>
    <% for sift in @sifts %>
  <div class="outer-post sift-post"%>
    <%= image_tag "pin.png", :class => 'post-pin'%>
    <div class="post"%>
    <%= link_to sift.url, target: :_blank, data: { "turbo-frame": "modal" } do %>
    <%= image_tag sift.image_url, :class => "post-image"%>
    <h2> <%= sift.headline %> </h2>
    </div>
    <p><%= link_to "⬆️", "/" %></p>
    <p><%= link_to "⬇️", "/" %></p>
    <% end %>
  </div>

    <% end %>
  <% else %>
    <h1>No new submissions to sift.</h1>
  <% end %>
</div>
