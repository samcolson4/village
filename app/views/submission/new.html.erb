<%= render "shared/modal" do %>
  <div id="submit-form">
    <%= simple_form_for @submission, url: submissions_new_path do |f| %>
      <h2><%= f.label :headline %></h2>
      <%= f.input_field :headline, required: true, error: 'Headline is mandatory, please specify one' %>
      <br><br>
      <h2><%= f.label :url %></h2>
      <%= f.input_field :url, label: 'URL', required: true, error: 'A URL is mandatory, please specify one' %>
      <br><br>
      <%= f.button :submit %>
    <% end %>
  </div>
<% end %>
